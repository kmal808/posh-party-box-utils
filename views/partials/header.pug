nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container
    a.navbar-brand(href='/')
      img.d-inline-block.align-text-top(src='/party-box-icon/mac64.png' alt='posh-icon' width='24' height='24')
      |  PoshUrls
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarColor01' aria-controls='navbarColor01' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarColor01.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(class=(title === 'About') ? 'active' : '')(href='https://poshpartyboxco.com') PoshPartyBoxCo
        if user
          li.nav-item
            a.nav-link(class=(title === 'Shortener') ? 'active' : '')(href='/shortener') Shortener
        if user
          li.nav-item
            a.nav-link(class=(title === 'URLs') ? 'active' : '')(href='/urls') URLs
          if user.email == "admin@gmail.com"
            li.nav-item
              a.nav-link(class=(title === 'Admin') ? 'active' : '')(href='/admin') Admin Console

      form.d-flex
        if !user
          a.btn.btn-outline-light.me-2(href='/login') Login
          a.btn.btn-primary(href='/signup') Create Account
        else
          a.btn.btn-primary.me-2(href='/account') My Account
          a.btn.btn-outline-danger(href='/logout') Sign out
