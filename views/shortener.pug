extends layout

block head
  script(src='https://www.google.com/recaptcha/api.js' async='' defer='')

block content
  .card.rounded-10.pb-4.pt-2.mt-4.px-5.mx-auto
    .card-body
    input(type='hidden', name='_csrf', value=_csrf)
    label.col-form-label.d-block(for='name') Enter your long link
      span(style={color: 'red'}) *
    input.form-control.mb-3#urlInput(type='url', name='longUrl', placeholder='Example: https://poshpartyboxco.com/collections/floral-party-box', autofocus, required)
    .alert.alert-danger.invisible.d-none#error-message
    .alert.alert-success.invisible.d-none#success-message
    label.col-form-label.d-block(for='name') Customize your link
    input.form-control.mb-3(type='text', name='slug', placeholder='Example: floral', autofocus)
    label.col-form-label.d-block(for='expiration') Choose an expiration date for your link
    input.form-control.mb-3(type='date', name='expirationDate', required pattern="\d{4}-\d{2}-\d{2}" min='2022-10-31', max='2025-10-31', autofocus)
    span.validity
    button.btn.btn-primary.w-100#submit-btn
      i.far.fa-envelope.fa-sm
      |  Send
  br
  .alert.alert-success.invisible.d-none#result
    .alert-heading üéâ Your new PoshLink‚Ñ¢Ô∏è üéâ
    hr
    div.d-flex.justify-content-between.align-items-center
      p.mb-0#shortUrl
      button.btn.btn-outline-dark.shadow-sm.invisible.d-none#copy-btn(data-clipboard-target="#shortUrl") Copy to clipboard üìã
      div.invisible.d-none#qrcode-container
        div#qrcode
      button.btn.btn-outline-dark.shadow-sm.invisible.d-none#qr-btn(onClick='generateQRCode()') Generate QRCode
        i.fa-solid.fa-qrcode
  br
  section.card.rounded-10.pb-4.pt-2.mt-4.px-5.mx-auto
    h1.border-bottom.pb-2.text-center Guidelines
    .card-body
      ul
        li The link must start with " http:// " or " https:// "
          ul
            span.fas.fa-times.pe-2
            span.fw-bold www.poshpartyboxco.com
            br
            span.fas.fa-check.pe-1
            span.fw-bold https://www.poshpartyboxco.com
        li An alias will be generated if you choose not customize your shortened link.
        li Set an optional expiration date for your shortened link. 

    script(src='/js/qrcode.js')
